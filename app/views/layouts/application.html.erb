</head>
<body class="pace-done theme-blue" >
  <div id="theme-wrapper">
    <!-- MENU_TOP -->
    <%= render partial: 'shared/header' %>
    <!-- END_MENU_TOP -->
    <div id="page-wrapper" class="container">
      <div class="row">

        <!-- MENU_LEFT -->
        <%= render partial: 'shared/menu_left' %>
        <!-- END_MENU_LEFT -->

        <!--MAIN_CONTAINER_PART-->
        <div id="content-wrapper">
          <div id="fixed-messages">
            <%= render 'shared/flash_messages' %>
          </div>

          <div class="row">
            <div class="col-lg-12">
              <%= yield %>
            </div>
          </div>
          <!-- FOOTER -->
          <%= render partial: 'shared/footer' %>
          <!-- END_FOOTER -->
        </div>
        <!-- END_MAIN_CONTAINER_PART -->
      </div>
    </div>
  </div>

  <%= javascript_include_tag 'application' %>

  <%= yield :inline_javascript %>

</body>
</html>
