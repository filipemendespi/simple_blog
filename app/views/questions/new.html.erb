<div class="row">
  <div class="col-lg-12">
    <div class="main-box">
      <header class="main-box-header clearfix">
        <h2>Cadastrar pergunta</h2>
      </header>

      <div class="main-box-body clearfix">
        <%= simple_form_for(@question, url: questions_path, method: :post) do |f| %>
          <div class="form-group">
            <%= f.input :privy, as: :select, collection: [['NÃ£o', 0], ['Sim', 1]], default: false %>
          </div>
          <div class="form-group">
            <%= f.input :title, input_html: { class: 'form-control' } %>
          </div>
          <div class="form-group">
            <%= f.input :body, as: :text, class: 'form-control', input_html: { class: 'form-control' } %>
          </div>

          <div class="form-group">
            <%= f.button :submit, 'Enviar', class: 'btn btn-primary' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
