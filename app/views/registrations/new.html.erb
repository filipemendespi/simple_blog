<%= form_for(resource, as: resource_name, url: user_registration_path, html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="input-group">
    <span class="input-group-addon"><i class="fa fa-user"></i></span>
    <%= f.text_field :name, autofocus: true, class: "form-control", placeholder: "Nome Completo" %>
  </div>
  <div class="input-group">
    <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
    <%= f.email_field :email, class: "form-control", placeholder: "EndereÃ§o de email" %>
  </div>
  <div class="input-group">
    <span class="input-group-addon"><i class="fa fa-lock"></i></span>
    <%= f.password_field :password, class: "form-control", placeholder: "Senha", autocomplete: "off" %>
  </div>
  <div class="row">
    <div class="col-xs-12">
      <%= f.submit "Cadastrar", class: "btn btn-success col-xs-12" %>
    </div>
  </div>
<% end %>
